{
    "name": "@plasm/types",
    "version": "1.5.0",
    "description": "Plasm Network node type definitions generated with @polkadot/typegen",
    "type": "commonjs",
    "keywords": [
        "plasm network",
        "typescript",
        "polkadot",
        "blockchain",
        "substrate",
        "types"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PlasmNetwork/plasm-types.git"
    },
    "author": "Stake Technologies <devops@stake.co.jp>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/PlasmNetwork/plasm-types/issues"
    },
    "homepage": "https://github.com/PlasmNetwork/plasm-types#readme",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "fetch:types": "ts-node -r tsconfig-paths/register scripts/build.ts",
        "build": "tsc --noEmit --pretty",
        "build:types": "yarn run generate:defs && yarn run generate:meta",
        "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package @plasm/types/interfaces --input ./src/interfaces",
        "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package @plasm/types/interfaces --endpoint ws://localhost:9944 --output ./src/interfaces",
        "lint": "tsc --noEmit --pretty",
        "clean": "rm -rf ./dist && rm tsconfig.tsbuildinfo"
    },
    "dependencies": {
        "@polkadot/api": "^4.9.2",
        "cross-env": "7.0.3"
    },
    "devDependencies": {
        "@polkadot/typegen": "^4.9.2",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    }
}
