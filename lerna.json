{
    "lerna": "4.0.0",
    "packages": [
        "packages/*"
    ],
    "version": "1.5.2",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "publishConfig": {
        "directory": "dist",
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "command": {
        "version": {
            "allowBranch": "master",
            "message": "[CI] Bump Version",
            "conventionalCommits": true,
            "createRelease": "github"
        }
    }
}
